{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@common": ["common/src/index.ts"],
      "@pipes/*": ["apps/frontend/src/app/pipes/*"],
      "@services/*": ["apps/frontend/src/app/services/*"],
      "@uxcommon/*": ["apps/frontend/src/app/uxcommon/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
