{
  "compileOnSave": false,
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@common": ["common/src/index.ts"],
      "@pipes/*": ["apps/frontend/src/app/pipes/*"],
      "@services/*": ["apps/frontend/src/app/services/*"],
      "@uxcommon/*": ["apps/frontend/src/app/uxcommon/*"],
      "@features/*": ["apps/frontend/src/app/features/*"],
      "@icons/*": ["apps/frontend/src/app/uxcommon/icons/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
