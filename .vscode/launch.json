{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach: Nx backend (9229)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/backend/**/*.js"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "disableOptimisticBPs": true,
      "trace": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (TS-Node)",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--loader", "ts-node/esm", "--no-warnings", "--inspect-brk", "apps/backend/src/main.ts"],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Angular: Chrome (auto-serve)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      "preLaunchTask": "serve-frontend",
      "sourceMaps": true
    },
    {
      "name": "Angular: Attach to Chrome",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    }
  ]
}
